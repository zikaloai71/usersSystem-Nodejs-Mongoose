<form  method="post" class="container my-3">
  <div class="form-group">
    <input class="form-control my-1" value="{{user.email}}" name='email' placeholder="Enter email">
  </div>
   <div class="form-group">
    <input  class="form-control my-1" value="{{user.name}}" name='name' placeholder="Enter name">
  </div>
   <div class="form-group">
    
    <input  class="form-control my-1" value="{{user.age}}" name='age'   placeholder="Enter age">
  </div>
  <div class="form-check form-switch">
  {{#if user.activeStatus}}
  <input name="activeStatus" class="form-check-input my-1" type="checkbox" role="switch"  id="flexSwitchCheckDefault" checked >
  {{else}}
  <input name="activeStatus" class="form-check-input my-1" type="checkbox" role="switch"  id="flexSwitchCheckDefault">
  {{/if}}
  <label class="form-check-label"  for="flexSwitchCheckDefault"> check if active user</label>

 </div>

  <button type="submit" class="btn btn-primary">edit user</button>
